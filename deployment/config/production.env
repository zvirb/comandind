# Production Environment Configuration
# This file contains non-sensitive production settings

# Application Configuration
NODE_ENV=production
APP_NAME=command-and-independent-thought
APP_VERSION=0.1.0
APP_PORT=8080

# Deployment Configuration
DEPLOYMENT_STRATEGY=blue-green
DEPLOYMENT_TIMEOUT=300
HEALTH_CHECK_RETRIES=10
HEALTH_CHECK_INTERVAL=30

# Performance Configuration
ENABLE_GZIP=true
ENABLE_HTTP2=true
CACHE_STATIC_ASSETS=true
STATIC_CACHE_DURATION=86400

# Security Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
MAX_REQUEST_SIZE=10m

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_PATH=/health

# Logging Configuration
LOG_LEVEL=warn
ENABLE_ACCESS_LOGS=true
LOG_FORMAT=combined

# Container Configuration
CONTAINER_USER=nginx
CONTAINER_GROUP=nginx
READ_ONLY_CONTAINER=true

# Resource Limits
MEMORY_LIMIT=512m
CPU_LIMIT=0.5

# Game-Specific Configuration
ENABLE_WEBGL=true
ENABLE_AUDIO=true
ENABLE_MULTIPLAYER=false
ENABLE_AI=true
PATHFINDING_WORKERS=2
TEXTURE_COMPRESSION=true
AUDIO_COMPRESSION=true

# Performance Tuning
FPS_TARGET=60
RENDER_OPTIMIZATION=true
MEMORY_POOL_SIZE=100m
TEXTURE_CACHE_SIZE=50m

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false
ENABLE_DEBUG_MODE=false
ENABLE_DEVELOPMENT_TOOLS=false