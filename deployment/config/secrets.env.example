# Production Secrets Template
# Copy this file to secrets.env and fill in actual values
# NEVER commit secrets.env to version control

# Database Configuration (if needed for multiplayer)
DATABASE_URL=postgresql://user:password@localhost:5432/gamedb
DATABASE_PASSWORD=your_secure_database_password
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# API Keys (if integrating external services)
ANALYTICS_API_KEY=your_analytics_api_key
MONITORING_API_KEY=your_monitoring_api_key
ERROR_REPORTING_API_KEY=your_error_reporting_api_key

# Authentication (if implementing user accounts)
JWT_SECRET=your_jwt_secret_key_at_least_64_characters_long
SESSION_SECRET=your_session_secret_key
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_DOMAIN=your_auth0_domain

# Third-party Integrations
STEAM_API_KEY=your_steam_api_key
DISCORD_BOT_TOKEN=your_discord_bot_token
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Cloud Services (if using cloud deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET_NAME=your_s3_bucket_name

# SSL/TLS Certificates
SSL_CERTIFICATE_PATH=/path/to/certificate.crt
SSL_PRIVATE_KEY_PATH=/path/to/private.key
SSL_CA_BUNDLE_PATH=/path/to/ca_bundle.crt

# Monitoring and Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
PAGERDUTY_API_KEY=your_pagerduty_api_key
DATADOG_API_KEY=your_datadog_api_key

# Content Delivery Network
CDN_URL=https://your-cdn.cloudfront.net
CDN_API_KEY=your_cdn_api_key

# Multiplayer Server Configuration (if implemented)
GAME_SERVER_SECRET=your_game_server_secret
MULTIPLAYER_API_KEY=your_multiplayer_api_key
LOBBY_SERVER_URL=https://your-lobby-server.com
MATCHMAKING_SECRET=your_matchmaking_secret