# Perception Service Environment Configuration
# Copy to .env and adjust values as needed

# Service Configuration
PERCEPTION_PORT=8001
PERCEPTION_HOST=0.0.0.0
PERCEPTION_DEBUG=false
PERCEPTION_LOG_LEVEL=INFO

# Ollama Configuration
PERCEPTION_OLLAMA_URL=http://ollama:11434
PERCEPTION_OLLAMA_MODEL=llava
PERCEPTION_OLLAMA_TIMEOUT=120
PERCEPTION_OLLAMA_MAX_RETRIES=3

# Vector Configuration
PERCEPTION_VECTOR_DIMENSIONS=1536

# Performance Configuration
PERCEPTION_MAX_IMAGE_SIZE_MB=10
PERCEPTION_MAX_CONCURRENT_REQUESTS=10

# CORS Configuration (comma-separated)
PERCEPTION_CORS_ORIGINS=*

# Monitoring Configuration
PERCEPTION_ENABLE_METRICS=true

# Custom prompts
PERCEPTION_DEFAULT_PROMPT=Describe this image in detail, focusing on key visual concepts, objects, actions, and scene elements that would be useful for semantic search and similarity matching.

# Development Settings (only for local development)
# PERCEPTION_DEBUG=true
# PERCEPTION_LOG_LEVEL=DEBUG
# PERCEPTION_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000