              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "id": 6,
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        },
        "pluginVersion": "8.0.0",
        "targets": [
          {
            "expr": "rate(cognitive_service_health_checks_total[5m]) * 60",
            "legendFormat": "{{service}} - {{status}}",
            "refId": "A"
          }
        ],
        "title": "Health Check Rate (per minute)",
        "type": "timeseries"
      }
    ],
    "refresh": "10s",
    "schemaVersion": 30,
    "style": "dark",
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "uid": "cognitive-health",
    "version": 1
  }
