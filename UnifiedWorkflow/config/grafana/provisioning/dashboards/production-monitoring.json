{
  "dashboard": {
    "id": null,
    "title": "AIWFE Production Monitoring Dashboard",
    "description": "Comprehensive production monitoring for AI Workflow Engine",
    "tags": ["production", "monitoring", "critical"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Chat API Health",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{endpoint=\"/api/v1/chat\"}[5m])",
            "legendFormat": "Request Rate"
          },
          {
            "expr": "rate(http_requests_total{endpoint=\"/api/v1/chat\",status=\"422\"}[5m])",
            "legendFormat": "422 Errors"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{endpoint=\"/api/v1/chat\"}[5m]))",
            "legendFormat": "95th Percentile Response Time"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "s", "label": "Response Time"}
        ]
      },
      {
        "id": 2,
        "title": "Galaxy Animation Performance",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "galaxy_animation_fps",
            "legendFormat": "Current FPS"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 120,
            "unit": "fps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 45},
                {"color": "green", "value": 60}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Service Status",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "up{job=~\"api|worker|postgres|redis\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "UP", "color": "green"},
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"}
            ]
          }
        }
      },
      {
        "id": 4,
        "title": "Authentication Metrics",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(authentication_attempts_total[5m])",
            "legendFormat": "Auth Attempts"
          },
          {
            "expr": "rate(authentication_failures_total[5m])",
            "legendFormat": "Auth Failures"
          },
          {
            "expr": "rate(session_validation_errors_total[5m])",
            "legendFormat": "Session Errors"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Infrastructure Resources",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %"
          },
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Database Performance",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "database_connection_pool_active",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "database_connection_pool_available",
            "legendFormat": "Available Connections"
          },
          {
            "expr": "rate(database_slow_queries_total[5m])",
            "legendFormat": "Slow Queries/sec"
          }
        ]
      },
      {
        "id": 7,
        "title": "SSL Certificate Status",
        "type": "stat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "ssl_certificate_days_remaining",
            "legendFormat": "Days Remaining"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "days",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 30},
                {"color": "green", "value": 60}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Network Connectivity",
        "type": "stat",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "probe_success{job=\"blackbox\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "OK", "color": "green"},
              {"type": "value", "value": "0", "text": "FAIL", "color": "red"}
            ]
          }
        }
      },
      {
        "id": 9,
        "title": "User Experience Metrics",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "page_load_time_seconds{quantile=\"0.95\"}",
            "legendFormat": "95th Percentile Page Load"
          },
          {
            "expr": "rate(user_interactions_total[5m])",
            "legendFormat": "User Interactions/sec"
          }
        ]
      },
      {
        "id": 10,
        "title": "Alert Status",
        "type": "alertlist",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "options": {
          "showOptions": "current",
          "maxItems": 10,
          "sortOrder": 3,
          "dashboardAlerts": false,
          "alertName": "",
          "dashboardTitle": "",
          "tags": []
        }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "style": "dark",
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "version": 1
  }
}