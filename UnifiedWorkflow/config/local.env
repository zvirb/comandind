# local.env
# Local development environment overrides
# Copy this to local.env and update the values for your local setup

# Development mode
ENVIRONMENT=development
DEBUG=true

# Local development ports
WEBUI_PORT=5173
API_PORT=8000

# Database settings for development
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ai_workflow_db
POSTGRES_USER=app_user
# Note: Set POSTGRES_PASSWORD in your local environment or .env file

# Redis settings for development
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_URL will be constructed by the run script with credentials

# Qdrant settings for development
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_USE_TLS=false

# Ollama settings for development
OLLAMA_API_BASE_URL=http://ollama:11434
OLLAMA_HOST=ollama
OLLAMA_PORT=11434

# CORS settings for local development

# Add your local hostname if needed (replace with your actual hostname)
# CORS_ALLOWED_ORIGINS=https://localhost,https://127.0.0.1,https://alienware,https://192.168.1.55,https://aiwfe.com,http://aiwfe.com# Detected hostname: alienware
CORS_ALLOWED_ORIGINS=https://localhost,https://aiwfe.com
