{
    auto_https off
    log {
        output stdout
        level DEBUG
    }
}

# Test HTTP server for aiwfe.com
aiwfe.com:80 {
    respond "HTTP Success - aiwfe.com on port 80 working!" 200
}

# Test HTTPS server for aiwfe.com with custom certificate
aiwfe.com:443 {
    tls /etc/certs/caddy_reverse_proxy/unified-cert.pem /etc/certs/caddy_reverse_proxy/unified-key.pem
    respond "HTTPS Success - aiwfe.com on port 443 working!" 200
}