{
  "version": "1.0",
  "hooks": {
    "user-prompt-submit": {
      "agent_discovery_monitor": {
        "enabled": true,
        "script": "/home/marku/ai_workflow_engine/.claude/hooks/agent_discovery_monitor.py",
        "description": "Monitors for new agent creation and triggers automatic integration",
        "trigger_patterns": [
          "Created agent:",
          "Added agent:",
          "/agents command output",
          "new .md files in /.claude/agents/"
        ],
        "integration_agent": "agent-integration-orchestrator",
        "timeout": 30
      }
    },
    "session-start": {
      "agent_inventory_check": {
        "enabled": true,
        "script": "/home/marku/ai_workflow_engine/.claude/hooks/agent_discovery_monitor.py",
        "description": "Checks for new agents at session start",
        "args": ["--session-start"]
      }
    }
  },
  "integration": {
    "auto_trigger": true,
    "require_confirmation": false,
    "integration_agent": "agent-integration-orchestrator",
    "documentation_template": "/home/marku/ai_workflow_engine/.claude/templates/agent_documentation_template.md"
  },
  "monitoring": {
    "watch_directories": [
      "/home/marku/ai_workflow_engine/.claude/agents/",
      "/home/marku/ai_workflow_engine/documentation/agents/"
    ],
    "state_file": "/home/marku/ai_workflow_engine/.claude/agent_registry_state.json",
    "log_file": "/home/marku/ai_workflow_engine/.claude/logs/agent_integration.log"
  }
}