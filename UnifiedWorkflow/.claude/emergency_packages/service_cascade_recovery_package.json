{
    "package_type": "service_cascade_recovery",
    "critical_services_order": [
        "core_database",
        "cache_service",
        "message_queue",
        "authentication_service",
        "cognitive_services"
    ],
    "recovery_procedures": {
        "core_database": {
            "restart_command": "docker restart core_database",
            "health_check": "pg_isready -h localhost"
        },
        "cache_service": {
            "restart_command": "docker restart redis_cache",
            "health_check": "redis-cli PING"
        },
        "message_queue": {
            "restart_command": "docker restart rabbitmq",
            "health_check": "rabbitmqctl cluster_status"
        },
        "authentication_service": {
            "restart_command": "docker restart keycloak",
            "health_check": "curl http://localhost:8080/auth/realms/master"
        },
        "cognitive_services": {
            "restart_command": "docker restart cognitive_services",
            "health_check": "curl http://localhost:5000/health"
        }
    },
    "recovery_priority": "HIGH",
    "estimated_recovery_time": "5-10 minutes",
    "global_dependency_check": "docker ps | grep healthy"
}